<resources>

    <style name="BusArrivalHeading">
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_height">@dimen/estimated_arrival_text_dimens</item>
        <item name="android:gravity">center_vertical</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="BusServiceNumberText">
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="EstimatedArrivalText">
        <item name="android:textSize">18sp</item>
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/estimated_arrival_text_dimens</item>
        <item name="android:layout_height">@dimen/estimated_arrival_text_dimens</item>
    </style>

    <style name="FullScreenDialog" parent="@style/ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="RoadNameText">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="SearchResultBusStopSubtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SearchResultText">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>